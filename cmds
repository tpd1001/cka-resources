#alias k=kubectl
k() { kubectl $@; }
source <(kubectl completion bash)

# pods

# replicasets (rs)
kubectl scale replicaset new-replica-set --replicas=5
kubectl edit replicaset new-replica-set

# delete
k delete $(k get po -o name)





===

